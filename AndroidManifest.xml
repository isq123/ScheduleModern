<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schedulemodern"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="com.example.schedulemodern.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.schedulemodern.MondayActivity"
            android:label="@string/title_activity_monday" >
        </activity>
        <activity
            android:name="com.example.schedulemodern.TuesdayActivity"
            android:label="@string/title_activity_tuesday" >
        </activity>
        <activity
            android:name="com.example.schedulemodern.WednesdayActivity"
            android:label="@string/title_activity_wednesday" >
        </activity>
        <activity
            android:name="com.example.schedulemodern.ThursdayActivity"
            android:label="@string/title_activity_thursday" >
        </activity>
        <activity
            android:name="com.example.schedulemodern.FridayActivity"
            android:label="@string/title_activity_friday" >
        </activity>
    </application>

</manifest>